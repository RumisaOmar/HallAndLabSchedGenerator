@using Microsoft.AspNetCore.Identity;
@model IdentityUser





<div class="modal fade" id="DeleteUser-@Model.Id">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" style="margin-left:33%">Delete Subject</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="">
                <form asp-action="DeleteUser">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input type="hidden" asp-for="Id" />
                        <p style="margin-top:15px;margin-left:25%;margin-bottom:30px">Are you sure to delete this user?<p>
                    </div>

                    <div style="margin-left:80px;margin-right:20px;margin-bottom:20px">
                        <button type="button" style="width:170px" class="btn btn-default  btn-flat" data-dismiss="modal">Close</button>
                        <input type="submit" style="width:170px" value="Delete" class="btn btn-danger btn-flat" />
                    </div>
                </form>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>





