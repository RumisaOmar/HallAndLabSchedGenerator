@model IEnumerable<ShedualeGenerator.Models.Lab>

@{
    ViewData["Title"] = "Labs";
}


<!-- DataTables -->
<link href="~/template/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
<link href="~/template/plugins/datatables-responsive/css/responsive.bootstrap4.min.css" rel="stylesheet" />
<link href="~/template/plugins/datatables-buttons/css/buttons.bootstrap4.min.css" rel="stylesheet" />


<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Labs</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="home" asp-action="index">Home</a></li>
                    <li class="breadcrumb-item active">Labs</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">

                <div class="card">
                    <div class="card-header" style="color: #17a2b8">
                         <span class="fa fa-plus"></span> <a style="color: #17a2b8;"  asp-action="Create"><b>Create New</b></a>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Status</th>
                                    <th>Student Count</th>
                                    <th>Board</th>
                                    <th>Projector</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Name</td>
                                        <td>@item.Status</td>
                                        <td>@item.StudentCount</td>
                                        <td>@item.Board</td>
                                        <td>@item.Projector</td>
                                        <td class="project-actions">
                                            <a class="btn btn-warning" data-toggle="tooltip" data-placement="left" title="Edit Lab" data-original-title="Tooltip on left" asp-action="Edit" asp-route-id="@item.Id"><i style="color:white" class="fa fa-pen"></i></a>
                                            <a class="btn btn-danger" data-toggle="tooltip" data-placement="left" title="Delete Lab" data-original-title="Tooltip on left" asp-action="Delete"  asp-route-id="@item.Id"><i class="fa fa-trash"></i></a>      
                                        </td>
                                    </tr>
                                }


                             

                            </tbody>
                          
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->

